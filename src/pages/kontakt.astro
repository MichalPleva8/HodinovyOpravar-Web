---
// Contact Page - Hodinový opravár
import BaseLayout from '../layouts/BaseLayout.astro'
import Input from '../components/ui/Input.astro'
import Button from '../components/ui/Button.astro'
import Card from '../components/ui/Card.astro'
import { faq } from '../data/faq'

// Get first 5 FAQs for contact page
const featuredFAQs = faq.slice(0, 5)
---

<BaseLayout
	title="Kontakt - Hodinový opravár | Žilina a okolie"
	description="Kontaktujte nás pre rýchlu a profesionálnu opravárensku službu. Tel: 0903 56 66 44, Email: info@hodinovyopravar.sk. Služby v Žiline a okolí."
>
	<!-- Hero Section -->
	<section class="bg-neutral-200 px-6 py-20">
		<div class="container mx-auto max-w-7xl text-center">
			<p class="text-primary text-subtitle mb-4 uppercase tracking-wide">KONTAKTUJTE NÁS</p>
			<h1 class="text-h1 mb-6 text-neutral-800">Sme tu pre vás</h1>
			<p class="text-body-lg mx-auto max-w-2xl text-neutral-600">
				Máte otázky alebo potrebujete pomoc? Neváhajte nás kontaktovať. Radi vám pomôžeme s
				akýmkoľvek problémom.
			</p>
		</div>
	</section>

	<!-- Contact Information & Form Section -->
	<section class="bg-white px-6 py-20">
		<div class="container mx-auto max-w-7xl">
			<div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
				<!-- Left: Contact Information -->
				<div>
					<h2 class="text-h2 mb-6 text-neutral-800">Kontaktné informácie</h2>
					<p class="text-body mb-8 text-neutral-600">
						Zavolajte nám alebo nám napíšte. Snažíme sa odpovedať na všetky dotazy čo
						najrýchlejšie.
					</p>

					<!-- Contact Cards -->
					<div class="space-y-4">
						<!-- Phone -->
						<Card>
							<div class="flex items-start gap-4">
								<div
									class="bg-primary/10 flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
								>
									<svg
										class="text-primary h-6 w-6"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
										></path>
									</svg>
								</div>
								<div>
									<h3 class="text-h6 mb-1 text-neutral-800">Telefón</h3>
									<a
										href="tel:+421903566644"
										class="text-primary hover:text-primary-hover text-h5 font-medium"
									>
										0903 56 66 44
									</a>
									<p class="text-body-sm mt-1 text-neutral-600">Po-Ne: 7:00 - 20:00</p>
								</div>
							</div>
						</Card>

						<!-- Email -->
						<Card>
							<div class="flex items-start gap-4">
								<div
									class="bg-primary/10 flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
								>
									<svg
										class="text-primary h-6 w-6"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
										></path>
									</svg>
								</div>
								<div>
									<h3 class="text-h6 mb-1 text-neutral-800">Email</h3>
									<a
										href="mailto:info@hodinovyopravar.sk"
										class="text-primary hover:text-primary-hover text-body font-medium"
									>
										info@hodinovyopravar.sk
									</a>
									<p class="text-body-sm mt-1 text-neutral-600">Odpoveď do 24 hodín</p>
								</div>
							</div>
						</Card>

						<!-- Location -->
						<Card>
							<div class="flex items-start gap-4">
								<div
									class="bg-primary/10 flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
								>
									<svg
										class="text-primary h-6 w-6"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
										></path>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-h6 mb-1 text-neutral-800">Oblasť pôsobenia</h3>
									<p class="text-body text-neutral-600">Žilina a okolie</p>
									<p class="text-body-sm mt-1 text-neutral-600">
										Bytča, Martin, Rajec, Terchová a ďalšie
									</p>
								</div>
							</div>
						</Card>
					</div>

					<!-- Quick Response Info -->
					<div class="bg-primary-light mt-8 rounded-lg p-4">
						<div class="flex items-start gap-3">
							<svg
								class="text-primary mt-0.5 h-6 w-6 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
								></path>
							</svg>
							<div>
								<h4 class="text-h6 mb-1 text-neutral-800">Núdzová oprava?</h4>
								<p class="text-body-sm text-neutral-700">
									Pri naliehavých záležitostiach (únik vody, výpadok elektriny)
									nás kontaktujte telefonicky. Snažíme sa reagovať do niekoľkých
									hodín.
								</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Right: Contact Form -->
				<div>
					<Card>
						<h2 class="text-h3 mb-6 text-neutral-800">Napíšte nám</h2>
						<p class="text-body mb-6 text-neutral-600">
							Vyplňte formulár a my sa vám ozveme čo najskôr.
						</p>

						<form class="space-y-6" method="POST" action="/api/contact">
							<!-- Name -->
							<Input
								label="Meno a priezvisko"
								name="name"
								type="text"
								placeholder="Ján Novák"
								required={true}
							/>

							<!-- Email -->
							<Input
								label="Email"
								name="email"
								type="email"
								placeholder="jan.novak@example.com"
								required={true}
							/>

							<!-- Phone -->
							<Input
								label="Telefón"
								name="phone"
								type="tel"
								placeholder="0903 123 456"
								required={true}
							/>

							<!-- Service -->
							<div class="space-y-2">
								<label
									for="service"
									class="block text-sm font-medium text-neutral-700"
								>
									Služba
								</label>
								<select
									id="service"
									name="service"
									class="focus:ring-primary w-full rounded-lg border border-neutral-400 px-4 py-3 transition-all focus:border-transparent focus:ring-2 focus:outline-none"
								>
									<option value="">Vyberte službu</option>
									<option value="voda-kurenie">Voda & kúrenie</option>
									<option value="elektrika">Elektrika</option>
									<option value="opravy-aut">Opravy áut/bicyklov</option>
									<option value="malovanie">Maľovanie</option>
									<option value="montaze-nabytku">Montáže nábytku</option>
									<option value="stavebne-prace">Stavebné práce</option>
									<option value="opravy-domacnost">Opravy v domácnosti</option>
									<option value="zahradne-prace">Záhradné práce</option>
									<option value="ine">Iné</option>
								</select>
							</div>

							<!-- Message -->
							<Input
								label="Správa"
								name="message"
								type="textarea"
								placeholder="Popíšte váš problém alebo požiadavku..."
								required={true}
								rows={5}
							/>

							<!-- Submit Button -->
							<Button type="submit" variant="primary" size="lg" class="w-full">
								Odoslať správu
							</Button>

							<p class="text-body-sm text-center text-neutral-600">
								Kliknutím na tlačidlo súhlasíte so spracovaním osobných údajov.
							</p>
						</form>
					</Card>
				</div>
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="bg-neutral-200 px-6 py-20">
		<div class="container mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="text-h2 mb-4 text-neutral-800">Často kladené otázky</h2>
				<p class="text-body text-neutral-600">Možno nájdete odpoveď na vašu otázku už tu</p>
			</div>

			<div class="space-y-4">
				{
					featuredFAQs.map((item) => (
						<Card hoverable={false}>
							<h3 class="text-h5 mb-2 text-neutral-800">{item.question}</h3>
							<p class="text-body text-neutral-600">{item.answer}</p>
						</Card>
					))
				}
			</div>

			<div class="mt-8 text-center">
				<p class="text-body text-neutral-600">
					Máte ďalšie otázky? <a
						href="tel:+421903566644"
						class="text-primary hover:text-primary-hover font-medium">Zavolajte nám</a
					>
				</p>
			</div>
		</div>
	</section>
</BaseLayout>
