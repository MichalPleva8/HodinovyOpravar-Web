---
// Stats Section - Business Statistics
import Button from '../ui/Button.astro'
import type { Stats } from '../../data/stats'

interface Props {
	data: Stats
}

const { data } = Astro.props

const stats = [
	{ label: 'Rokov skúseností', value: `${data.yearsExperience}+` },
	{ label: 'Spokojných zákazníkov', value: `${data.happyClients}+` },
	{ label: 'Dokončených projektov', value: `${data.projectsCompleted}+` },
	{ label: 'Služieb', value: `${data.servicesOffered}+` },
]
---

<section class="bg-neutral-800 px-6 py-20 text-white lg:py-32">
	<div class="container mx-auto max-w-7xl">
		<div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
			<!-- Left: Content -->
			<div>
				<p class="text-primary mb-4 text-sm font-medium tracking-wide uppercase">
					NAŠE SKÚSENOSTI
				</p>
				<h2 class="mb-6 text-3xl leading-tight font-bold md:text-4xl">
					Zameriavame sa na spokojnosť zákazníka a kvalitu
				</h2>
				<p class="mb-8 text-lg leading-relaxed text-neutral-300">
					S viac ako 15 rokmi skúseností v odvetví poskytujeme profesionálne služby, na
					ktoré sa môžete spoľahnúť. Každý projekt realizujeme s maximálnou precíznosťou a
					férovou cenou.
				</p>
				<Button href="/kontakt" variant="primary" size="lg"> Získať cenovú ponuku </Button>
			</div>

			<!-- Right: Stats Grid -->
			<div class="grid grid-cols-2 gap-8">
				{
					stats.map((stat) => (
						<div class="text-center lg:text-left">
							<p class="text-primary mb-2 text-4xl font-bold md:text-5xl">
								{stat.value}
							</p>
							<p class="text-sm text-neutral-400 md:text-base">{stat.label}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
