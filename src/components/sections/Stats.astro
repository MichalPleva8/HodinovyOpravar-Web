---
// Stats Section - Business Statistics
import Button from '../ui/Button.astro'
import type { Stats } from '../../data/stats'

interface Props {
	data: Stats
}

const { data } = Astro.props

const stats = [
	{ label: 'Rokov skúseností', value: data.yearsExperience, plusColor: 'var(--color-brand-red)' },
	{
		label: 'Dokončených zákaziek',
		value: data.projectsCompleted,
		plusColor: 'var(--color-brand-cyan)',
	},
	{ label: 'Služieb', value: data.servicesOffered, plusColor: 'var(--color-brand-red)' },
]
---

<section class="bg-neutral-800 px-6 py-20 text-white lg:py-32">
	<div class="container mx-auto max-w-7xl">
		<div
			class="mx-auto grid max-w-[600px] grid-cols-1 items-center lg:max-w-none lg:grid-cols-2"
			style="gap: 70px;"
		>
			<!-- Left: Image (1/2) -->
			<div class="order-2 flex items-center justify-center lg:order-1">
				<img
					src="/images/experience.jpg"
					alt="Hodinový opravár pri práci"
					class="w-full rounded-lg object-cover"
					style="aspect-ratio: 1/1;"
				/>
			</div>

			<!-- Right: Content (1/2) -->
			<div class="order-1 text-center lg:order-2 lg:text-left">
				<p class="text-primary text-subtitle mb-3 tracking-wide uppercase">
					Naše skúseností
				</p>
				<h2 class="text-display-2 mb-3">
					Zameriavame sa na spokojnosť zákazníka a kvalitu
				</h2>
				<p class="text-body text-neutral-300" style="margin-bottom: 22px;">
					S viac ako 30 rokmi skúseností v odvetví poskytujeme profesionálne služby, na
					ktoré sa môžete spoľahnúť. Každý projekt realizujeme s maximálnou precíznosťou a
					férovou cenou.
				</p>

				<!-- Stats Grid -->
				<div
					class="flex flex-col justify-center gap-8 md:flex-row md:gap-12 lg:justify-start"
					style="margin-bottom: 58px;"
				>
					{
						stats.map((stat) => (
							<div>
								<p class="text-display-1 mb-1 text-white">
									{stat.value}<span style={`color: ${stat.plusColor}`}>+</span>
								</p>
								<p
									class="text-neutral-400"
									style="font-size: 18px; line-height: 1.111em; font-weight: 600;"
								>
									{stat.label}
								</p>
							</div>
						))
					}
				</div>

				<div class="flex w-full justify-center lg:w-auto lg:justify-start">
					<Button href="#referencie" variant="primary" size="lg" class="w-full md:w-auto">Referencie</Button>
				</div>
			</div>
		</div>
	</div>
</section>
