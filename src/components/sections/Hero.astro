---
// Hero Section - Homepage
import Button from '../ui/Button.astro'
import { Phone, MapPin } from 'lucide-react'
---

<section class="relative bg-neutral-200 px-6 py-20 lg:py-32">
	<div class="container mx-auto max-w-7xl">
		<div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
			<!-- Left: Content -->
			<div>
				<p class="text-primary mb-4 text-sm font-medium tracking-wide uppercase">
					HODINOVÝ OPRAVÁR
				</p>
				<h1
					class="mb-6 text-4xl leading-tight font-bold text-neutral-800 md:text-5xl lg:text-6xl"
				>
					Váš spoľahlivý opravár v Žiline
				</h1>
				<p class="mb-8 text-lg leading-relaxed text-neutral-600 md:text-xl">
					Poskytujeme komplexné opravárenské služby pre váš domov alebo firmu. Voda,
					elektrika, kúrenie, opravy áut a bicyklov, maľovanie a mnoho ďalších služieb.
				</p>

				<!-- CTAs -->
				<div class="mb-8 flex flex-col gap-4 sm:flex-row">
					<Button href="tel:+421903566644" variant="primary" size="lg">
						Zavolať teraz
					</Button>
					<Button href="/sluzby" variant="secondary" size="lg"> Naše služby </Button>
				</div>

				<!-- Quick Contact Info -->
				<div class="flex flex-col gap-6 text-sm text-neutral-600 sm:flex-row">
					<div class="flex items-center gap-2">
						<Phone className="text-primary h-5 w-5" />
						<span>0903 56 66 44</span>
					</div>
					<div class="flex items-center gap-2">
						<MapPin className="text-primary h-5 w-5" />
						<span>Žilina a okolie</span>
					</div>
				</div>
			</div>

			<!-- Right: Image -->
			<div class="relative h-full max-h-[600px] lg:max-h-[700px]">
				<img
					src="/images/hero/roman-half-cut.png"
					alt="Profesionálny opravár - Hodinový opravár Žilina"
					class="h-full w-full rounded-lg object-contain object-center"
				/>
			</div>
		</div>
	</div>
</section>
