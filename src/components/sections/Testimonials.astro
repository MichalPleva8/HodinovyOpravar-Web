---
// Testimonials Section - Customer Reviews
import TestimonialCard from '../ui/TestimonialCard.astro'
import type { Testimonial } from '../../data/testimonials'

interface Props {
	testimonials: Testimonial[]
	featured?: boolean
}

const { testimonials, featured = false } = Astro.props

// If featured, show only first 6 testimonials
const displayedTestimonials = featured ? testimonials.slice(0, 6) : testimonials
---

<section class="bg-neutral-200 px-6 py-20 lg:py-32">
	<div class="container mx-auto max-w-7xl">
		<!-- Section Header -->
		<div class="mb-12 text-center lg:mb-16">
			<p class="text-primary mb-2 text-sm font-medium tracking-wide uppercase">REFERENCIE</p>
			<h2 class="mb-4 text-3xl font-bold text-neutral-800 md:text-4xl">
				Čo hovoria naši zákazníci
			</h2>
			<p class="mx-auto max-w-2xl text-lg leading-relaxed text-neutral-600">
				Prečítajte si hodnotenia od spokojných zákazníkov, ktorí využili naše služby. Vaša
				spokojnosť je naša priorita.
			</p>
		</div>

		<!-- Testimonials Grid -->
		<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
			{displayedTestimonials.map((testimonial) => <TestimonialCard {...testimonial} />)}
		</div>
	</div>
</section>
