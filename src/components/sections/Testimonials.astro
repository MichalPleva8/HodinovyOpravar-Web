---
// Testimonials Section - Customer Reviews
import TestimonialCard from '../ui/TestimonialCard.astro';
import type { Testimonial } from '../../data/testimonials';

interface Props {
  testimonials: Testimonial[];
  featured?: boolean;
}

const { testimonials, featured = false } = Astro.props;

// If featured, show only first 6 testimonials
const displayedTestimonials = featured ? testimonials.slice(0, 6) : testimonials;
---

<section class="py-20 lg:py-32 px-6 bg-neutral-200">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-12 lg:mb-16">
      <p class="text-primary font-medium text-sm uppercase tracking-wide mb-2">
        REFERENCIE
      </p>
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-800 mb-4">
        Čo hovoria naši zákazníci
      </h2>
      <p class="text-lg text-neutral-600 max-w-2xl mx-auto leading-relaxed">
        Prečítajte si hodnotenia od spokojných zákazníkov, ktorí využili naše služby.
        Vaša spokojnosť je naša priorita.
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {displayedTestimonials.map(testimonial => (
        <TestimonialCard {...testimonial} />
      ))}
    </div>
  </div>
</section>
