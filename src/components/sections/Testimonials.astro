---
// Testimonials Section - Customer Reviews
import TestimonialsCarousel from '../interactive/TestimonialsCarousel'
import type { Testimonial } from '../../data/testimonials'

interface Props {
	testimonials: Testimonial[]
	featured?: boolean
}

const { testimonials, featured = false } = Astro.props

// If featured, show only first 6 testimonials
const displayedTestimonials = featured ? testimonials.slice(0, 6) : testimonials
---

<section id="referencie" class="bg-white px-6 py-20 lg:py-32">
	<div class="container mx-auto max-w-7xl">
		<!-- Section Header -->
		<div class="mb-12 text-center lg:mb-8">
			<p
				class="text-primary text-subtitle mb-3 tracking-wide uppercase"
				data-animate="fade-up"
				data-animate-delay="0"
			>
				REFERENCIE
			</p>
			<h2
				class="text-display-2 mb-4 text-neutral-800"
				data-animate="fade-up"
				data-animate-delay="100"
			>
				Čo hovoria naši zákazníci
			</h2>
			<p
				class="text-body mx-auto max-w-2xl text-neutral-600"
				data-animate="fade-up"
				data-animate-delay="200"
			>
				Prečítajte si hodnotenia od spokojných zákazníkov, ktorí využili naše služby. Vaša
				spokojnosť je naša priorita.
			</p>
		</div>

		<!-- Testimonials Carousel -->
		<div data-animate="fade-up" data-animate-delay="300">
			<TestimonialsCarousel testimonials={displayedTestimonials} client:load />
		</div>
	</div>
</section>
