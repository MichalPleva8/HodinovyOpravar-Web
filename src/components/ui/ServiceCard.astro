---
/**
 * ServiceCard Component
 *
 * A specialized card for displaying services with an icon, title, description,
 * and optional image. Includes hover effects and a call-to-action link.
 *
 * @example
 * <ServiceCard
 *   title="Voda & kúrenie"
 *   description="Opravy vodovodov, inštalácie, výmena batérií a radiátorov."
 *   icon="wrench"
 *   href="/sluzby/voda-kurenie"
 * />
 */

interface Props {
  title: string;
  description: string;
  icon?: string; // Icon name from lucide-react
  href: string;
  image?: string;
}

const { title, description, icon, href, image } = Astro.props;
---

<div class="bg-white rounded-card p-6 shadow-card hover:shadow-card-hover transition-all duration-300 group h-full flex flex-col">
  {image ? (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-lg mb-4"
    />
  ) : (
    <div class="w-16 h-16 bg-primary/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
      <!-- Icon placeholder - will be replaced with Lucide icons when implemented -->
      <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
  )}

  <h3 class="text-h4 font-bold text-neutral-800 mb-2">{title}</h3>
  <p class="text-body-sm text-neutral-600 mb-4 flex-grow line-clamp-3">{description}</p>

  <a
    href={href}
    class="text-primary hover:text-primary-hover font-medium inline-flex items-center gap-2 group/link mt-auto cursor-pointer"
  >
    Zistiť viac
    <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</div>
