---
/**
 * ServiceCard Component
 *
 * A specialized card for displaying services with an icon, title, description,
 * and optional image. Includes hover effects and a call-to-action link.
 *
 * @example
 * <ServiceCard
 *   title="Voda & kúrenie"
 *   description="Opravy vodovodov, inštalácie, výmena batérií a radiátorov."
 *   icon="wrench"
 *   href="/sluzby/voda-kurenie"
 * />
 */

interface Props {
	title: string
	description: string
	icon?: string // Icon name from lucide-react
	href: string
	image?: string
}

const { title, description, icon, href, image } = Astro.props
---

<div
	class="rounded-card shadow-card hover:shadow-card-hover group flex h-full flex-col bg-white p-6 transition-all duration-300"
>
	{
		image ? (
			<img src={image} alt={title} class="mb-4 h-48 w-full rounded-lg object-cover" />
		) : (
			<div class="bg-primary/10 group-hover:bg-primary/20 mb-4 flex h-16 w-16 items-center justify-center rounded-lg transition-colors">
				{/* Icon placeholder - will be replaced with Lucide icons when implemented */}
				<svg
					class="text-primary h-8 w-8"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
					/>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
					/>
				</svg>
			</div>
		)
	}

	<h3 class="text-h4 mb-2 font-bold text-neutral-800">{title}</h3>
	<p class="text-body-sm mb-4 line-clamp-3 flex-grow text-neutral-600">{description}</p>

	<a
		href={href}
		class="text-primary hover:text-primary-hover group/link mt-auto inline-flex cursor-pointer items-center gap-2 font-medium"
	>
		Zistiť viac
		<svg
			class="h-4 w-4 transition-transform group-hover/link:translate-x-1"
			fill="none"
			stroke="currentColor"
			viewBox="0 0 24 24"
		>
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
			></path>
		</svg>
	</a>
</div>
