---
// Info Card Component - Used for contact information cards
interface Props {
	icon: string
	iconAlt: string
	heading: string
	value: string
	href?: string
	class?: string
}

const { icon, iconAlt, heading, value, href, class: className = '' } = Astro.props
const Tag = href ? 'a' : 'div'
const linkClasses = href
	? 'cursor-pointer transition-all duration-300 ease-out hover:translate-y-[-2px]'
	: ''
---

<Tag href={href} class={`flex flex-row items-center ${linkClasses} ${className}`}>
	<div
		class="icon-container mr-3 hidden items-center justify-center overflow-hidden rounded-full sm:mr-7"
		style="background-color: #f5f9fe;"
	>
		<img src={icon} alt={iconAlt} class="icon-image" />
	</div>

	<div class="flex flex-col">
		<h3 class="text-h4 text-neutral-800">{heading}</h3>
		<p class="mt-2 text-xl leading-tight font-medium text-blue-500" set:html={value} />
	</div>
</Tag>

<style>
	/* Hide on smallest screens */
	.icon-container {
		display: none;
	}

	/* Show at reduced size on medium-small screens (480px+) */
	@media (min-width: 480px) {
		.icon-container {
			display: flex;
			width: 65px;
			height: 65px;
		}
		.icon-image {
			width: 32px;
			height: 32px;
		}
	}

	/* Full size on tablet and up (640px+) */
	@media (min-width: 640px) {
		.icon-container {
			width: 80px;
			height: 80px;
		}
		.icon-image {
			width: auto;
			height: auto;
		}
	}
</style>
