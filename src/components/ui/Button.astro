---
/**
 * Button Component
 *
 * A versatile button component with multiple variants and sizes.
 * Supports both link and button modes.
 *
 * @example
 * <Button variant="primary" size="lg" href="#kontakt">Kontaktujte nás</Button>
 * <Button variant="secondary" type="submit">Odoslať</Button>
 */

interface Props {
	variant?: 'primary' | 'secondary' | 'primary-white' | 'secondary-white'
	size?: 'sm' | 'md' | 'lg'
	href?: string
	type?: 'button' | 'submit' | 'reset'
	class?: string
	disabled?: boolean
	onClick?: string
}

const {
	variant = 'primary',
	size = 'md',
	href,
	type = 'button',
	class: className = '',
	disabled = false,
	onClick,
} = Astro.props

// Base classes for all buttons
const baseClasses =
	'inline-flex items-center justify-center font-bold rounded-[10px] transition-all duration-300 ease-in-out cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed'

// Variant-specific classes
const variantClasses = {
	primary:
		'bg-primary hover:bg-primary-hover text-white shadow-button hover:shadow-button-hover hover:-translate-y-0.5 active:translate-y-0 active:shadow-button-active',
	secondary:
		'bg-transparent border border-primary text-primary hover:bg-primary-hover hover:border-primary-hover hover:text-white hover:shadow-button-hover hover:-translate-y-0.5 active:translate-y-0 active:shadow-button-active',
	'primary-white':
		'bg-white text-primary hover:bg-neutral-700 hover:text-white shadow-button hover:shadow-button-hover hover:-translate-y-0.5 active:translate-y-0 active:shadow-button-active',
	'secondary-white':
		'bg-transparent border border-white text-white hover:bg-white hover:border-white hover:text-neutral-800 hover:shadow-button-hover hover:-translate-y-0.5 active:translate-y-0 active:shadow-button-active',
}

// Size-specific classes
const sizeClasses = {
	sm: 'px-5 py-2.5 text-base',
	md: 'px-8 py-4 text-lg',
	lg: 'px-10 py-5 text-xl',
}

// Combine all classes
const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`

// Use 'a' tag if href is provided, otherwise 'button'
const Tag = href ? 'a' : 'button'
---

<Tag
	href={href}
	type={!href ? type : undefined}
	disabled={!href ? disabled : undefined}
	onclick={onClick}
	class={classes}
>
	<slot />
</Tag>
