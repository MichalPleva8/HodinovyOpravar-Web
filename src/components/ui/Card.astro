---
/**
 * Card Component
 *
 * A basic card container with optional hover effect.
 * Provides consistent styling for content containers throughout the site.
 *
 * @example
 * <Card hoverable>
 *   <h3>Card Title</h3>
 *   <p>Card content goes here</p>
 * </Card>
 */

interface Props {
	class?: string
	hoverable?: boolean
	padding?: 'sm' | 'md' | 'lg'
}

const { class: className = '', hoverable = false, padding = 'md' } = Astro.props

// Padding variations
const paddingClasses = {
	sm: 'p-4',
	md: 'p-6',
	lg: 'p-8',
}

// Hover effect classes
const hoverClasses = hoverable ? 'hover:shadow-card-hover hover:-translate-y-1 cursor-pointer' : ''

// Combine all classes
const classes = `bg-white rounded-card shadow-card transition-all duration-300 ${paddingClasses[padding]} ${hoverClasses} ${className}`
---

<div class={classes}>
	<slot />
</div>
